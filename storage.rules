rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. Quejas y Sugerencias
    // El usuario solo puede subir archivos a su propia carpeta: quejas/{uid}/...
    match /quejas/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Solo imagenes
    }

    // 2. Fotos de Perfil
    // Usuario sube a: users/{uid}/...
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Foro de Eventos (Covers)
    match /foro/covers/{fileName} {
      allow read: if true; // PÃºblico para que todos vean los eventos
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
